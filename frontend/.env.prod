# 0x.ship Discovery Platform - Frontend Production Environment
# This file is used for production deployment
# NOTE: Frontend .env values are baked into the build at build time
# Production API URL is set via docker-compose.prod.yml build args

# API Configuration (will be overridden by Docker build args)
VITE_API_URL=https://tripit-xgvr.onrender.com

# Blockchain Configuration (Kaia Testnet)
VITE_KAIA_KAIROS_RPC=https://public-en-kairos.node.kaia.io
VITE_KAIA_CHAIN_ID=1001

# 0xCerts Contract (Kaia Testnet)
VITE_OXCERTS_ADDRESS=0x0000000000000000000000000000000000000000
VITE_OXCERTS_ABI=[]

# Wallet Connection (WalletConnect)
VITE_WALLETCONNECT_PROJECT_ID=your_production_walletconnect_project_id

# Feature Flags
VITE_ENABLE_WALLET_CONNECTION=true
VITE_ENABLE_0XCERTS_VERIFICATION=true
VITE_ENABLE_COMMENTS=true
VITE_ENABLE_INTROS=true
VITE_ENABLE_BADGES=true

# Auth
VITE_AUTH_TOKEN_KEY=auth_token
